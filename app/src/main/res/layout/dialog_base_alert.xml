<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="message"
            type="String" />

        <variable
            name="ok"
            type="String" />

        <variable
            name="cancel"
            type="String" />

        <variable
            name="callback"
            type="com.iunctainc.iuncta.app.di.base.dialog.BaseAlertDialog.ClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextView.20x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/dp15"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp15"
            android:text="@{title}"
            android:textColor="@color/black"
            tools:text="Title" />

        <TextView
            android:id="@+id/tv_message"
            style="@style/TextView.16x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp10"
            android:text="@{message}"
            android:textColor="@color/grey"
            tools:text="message" />

        <TextView
            style="@style/TextView.14x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message"
            android:layout_toStartOf="@+id/tv_cancel"
            android:onClick="@{()->callback.onOkClick()}"
            android:padding="@dimen/dp15"
            android:text="@{ok}"
            android:textColor="@color/colorPrimary"
            tools:text="Ok" />

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/TextView.14x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message"
            android:layout_alignParentEnd="true"
            android:onClick="@{()->callback.onCancelClick()}"
            android:padding="@dimen/dp15"
            android:text="@{cancel}"
            android:textColor="@color/colorPrimary"
            tools:text="Cancel" />
    </RelativeLayout>
</layout>
