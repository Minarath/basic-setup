<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RotateLoading">
        <attr name="loading_width" format="dimension" />
        <attr name="loading_color" format="color" />
        <attr name="shadow_position" format="integer" />
        <attr name="loading_speed" format="integer" />
    </declare-styleable>


    <declare-styleable name="MyCustomView">
        <attr name="maxSeconds" format="integer" />
        <attr name="timeInterval" format="integer" />
    </declare-styleable>


    <declare-styleable name="MaterialSearchView">
        <attr name="searchBackground" format="integer" />
        <attr name="searchVoiceIcon" format="integer" />
        <attr name="searchCloseIcon" format="integer" />
        <attr name="searchBackIcon" format="integer" />
        <attr name="searchSuggestionIcon" format="integer" />
        <attr name="searchSuggestionBackground" format="integer" />
        <attr name="android:hint" />
        <attr name="android:textColor" />
        <attr name="android:textColorHint" />
        <attr name="android:inputType" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="signature">
        <attr name="enableSignature" format="boolean" />
        <attr name="penSize" format="dimension" />
        <attr name="penColor" format="color" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="TagView">
        <attr name="bg_radius" format="dimension" />
        <attr name="bg_alpha" format="integer" />
        <attr name="st_alpha" format="integer" />
        <attr name="bg_color" format="color" />
        <attr name="bg_border_width" format="float" />
        <attr name="mleft" format="dimension" />
        <attr name="mright" format="dimension" />
        <attr name="mtop" format="dimension" />
        <attr name="mbottom" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DividerView">
        <attr name="color" format="color" />
        <attr name="dashLength" format="dimension" />
        <attr name="dashGap" format="dimension" />
        <attr name="dashThickness" format="dimension" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>
</resources>